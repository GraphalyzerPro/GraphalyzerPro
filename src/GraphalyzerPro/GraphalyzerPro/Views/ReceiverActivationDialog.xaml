<Window x:Class="GraphalyzerPro.Views.ReceiverActivationDialog"
        x:Name="ReceiverActivationDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReceiverActivationDialog" Height="300" Width="300"
        DataContext="{Binding ElementName=ReceiverActivationDialogWindow, Path=ViewModel}">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button Content="OK" IsDefault="True" IsEnabled="{Binding ElementName=ReceiverListBox, Path=SelectedItems.Count}" Click="ButtonBase_OnClick"/>
            <Button Content="Abbrechen" IsCancel="True"/>
        </StackPanel>
        <ListBox Name="ReceiverListBox" ItemsSource="{Binding AllReceiver}" SelectedItem="{Binding SelectedReceiver}">
           <ListBox.ItemTemplate>
               <DataTemplate>
                   <Label Content="{Binding Name}"></Label>
               </DataTemplate>
           </ListBox.ItemTemplate>
       </ListBox>
    </DockPanel>
</Window>
