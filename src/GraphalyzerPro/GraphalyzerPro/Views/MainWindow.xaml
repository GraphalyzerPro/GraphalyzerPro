<Window x:Class="GraphalyzerPro.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:GraphalyzerPro.ViewModels"
        DataContext="{Binding Path=MainViewModel, Source={StaticResource ViewModelLocator}}"
        Title="{Binding Title}" Height="350" Width="525">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Empfänger">
                <MenuItem Header="Empfänger aktivieren..." Command="{Binding ActivateReceiverCommand}" />
            </MenuItem>
        </Menu>
        <TabControl ItemsSource="{Binding SessionViewModels}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <TextBlock Text="{Binding SessionId}" />
                    </DockPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate DataType="viewModels:SessionViewModel">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Top">
                            <Button DockPanel.Dock="Right" Content="Auswählen"
                                    IsEnabled="{Binding ElementName=AnalysisComboBox, Path=SelectedItem}" Command="{Binding SelectAnalysisCommand}"/>
                            <ComboBox DockPanel.Dock="Left" Name="AnalysisComboBox" ItemsSource="{Binding AllAnalyses}"
                                      SelectedItem="{Binding SelectedAnalysis}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding Name}"></Label>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </DockPanel>
                        <ContentControl Content="{Binding ActivatedAnalysis.View}"/>
                    </DockPanel>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </DockPanel>
</Window>